<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
 	<item
 	    android:state_checked="true"
 	    android:drawable="@drawable/key_checked"/>
 	<item
 	    android:state_checked="true"
 	    android:state_checkable="true"
 	    android:drawable="@drawable/key_checked"/>
    <item
        android:state_pressed="true"
        android:drawable="@drawable/key_pressed" />
 	<item 
 	    android:state_checkable="true"
 	    android:drawable="@drawable/key_checkable"/>
    <item
        android:drawable="@drawable/key_normal" />
    
    <!-- normal, pressed, checkable, 
    checkable+pressed, checkable+checked, 
    checkable+checked+pressed-->
</selector>